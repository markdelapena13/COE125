name = input("Input name: ")
username = input("Input username: ")

username = username[0:25] 
print ("Your username is", username, ".")

password = input("Create a password: ")

file = open("Login.txt","a")
file.write (username)
file.write (",")
file.write (password)
file.write("\n")
file.close()

print ("Your login details have been saved. ")
